{
  "name": "news-bot-desktop",
  "version": "1.0.0",
  "description": "Professional anti-echo chamber news aggregation desktop application",
  "main": "electron/main.js",
  "homepage": "./",
  "author": {
    "name": "News Bot Team",
    "email": "contact@newsbot.app"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "concurrently \"npm run start:react\" \"wait-on http://localhost:3000 && npm run start:electron\"",
    "start:react": "react-scripts start",
    "start:electron": "electron .",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "react-scripts build",
    "build:prepare": "cp electron/main.js build/electron.js && cp electron/preload.js build/preload.js",
    "build:electron": "npm run build:prepare && electron-builder",
    "test": "react-scripts test",
    "test:all": "npm run test:structure && npm run test:benchmarks && npm run test:electron && npm run test:electron-perf && npm run test:startup && npm run test:components && npm run test:database",
    "eject": "react-scripts eject",
    "dist": "npm run build && electron-builder --publish=never",
    "dist:win": "npm run build && electron-builder --win --publish=never"
  },
  "dependencies": {
    "axios": "^1.3.0",
    "better-sqlite3": "^8.7.0",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^5.3.0",
    "node-cron": "^3.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "react-scripts": "5.0.1",
    "rss-parser": "^3.13.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^18.14.6",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "babel-jest": "^30.0.5",
    "concurrently": "^7.6.0",
    "electron": "^22.3.0",
    "electron-builder": "^23.6.0",
    "electron-notarize": "^1.2.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.1",
    "spectron": "^19.0.0",
    "typescript": "^4.9.5",
    "wait-on": "^7.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.newsbot.desktop",
    "productName": "News Bot",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "electron/**/*",
      "src/services/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}